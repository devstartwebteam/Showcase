@model IEnumerable<Showcase.Models.PostLocation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ds-title-row">
    <div class="col-sm-1">
        <h2 class="ds-admin-title">Index</h2>
    </div>
    <div class="col-sm-11">
        <button class="ds-create-btn">
            @Html.ActionLink("Create New", "Create")
        </button>
    </div>
    
    @Html.Partial("_StatusMessage", TempData["StatusMessage"])
    
</div>

<table id="ShowcaseDataTable" class="table responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostLocationName)
        </th>
        <th></th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostLocationName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PostLocationId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PostLocationId })
                </td>
            </tr>
        }
    </tbody>
</table>