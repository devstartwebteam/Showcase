<!DOCTYPE html>
<html lang="en">

@Html.Partial("_AdminHead")

<body id="s-admin-body">
    <div class="wrapper s-admin-wrapper">
        @Html.Partial("_AdminSidebar")
        <div class="main-panel">
            @Html.Partial("_AdminNavigation")
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("_AdminFooter")
        </div>
    </div>
</body>
</html>
<!--   Core JS Files   -->
@Scripts.Render("~/bundles/bootstraplight")

<script type="text/javascript">
    var title = '@ViewBag.Title';
    var titleArea = document.getElementById('s-admin-title');
    titleArea.innerText = title;

    $('#s-dashboard').addClass('active');
</script>