@using Showcase.Helpers
@model Showcase.Models.PostLocation
@{
    string postDate = Model.LastModified?.Date.ToString("MMMM dd, yyyy");
}

@foreach (var post in Model.Posts)
{
    string url = Url.Action("Post", "Blog", routeValues: new { title = post.PostUrl });

    <div class="col-lg-6 col-md-6">
        <div class="single-post-item">
            <div class="post-thumb">
                <a href="@url">
                    @Html.BottomImage(post.PostImages.PageBody)
                </a>
            </div>
            <div class="post-details">

                <h4>@Html.ActionLink(post.PostName, "Post", "Blog", routeValues: new { title = post.PostUrl}, htmlAttributes: new {id = "ds-sliderLink", @class = "ds-slider-link"})
                </h4>
                <p>
                    @Html.Raw(HttpUtility.HtmlDecode(post.PostSnippet))
                </p>
                <div class="blog-meta">
                    <a href="#" class="m-gap"><span class="lnr lnr-calendar-full"></span>@postDate</a>
                    <a href="#" class="m-gap"><span class="lnr lnr-bubble">05</span></a>
                </div>
            </div>
        </div>
    </div>
}

<div class="col-lg-12">
    <nav class="blog-pagination justify-content-center d-flex">
        <ul class="pagination">
            <li class="page-item">
                <a href="#" class="page-link" aria-label="Previous">
                    <span aria-hidden="true">
                        <span class="lnr lnr-arrow-left"></span>
                    </span>
                </a>
            </li>
            <li class="page-item"><a href="#" class="page-link">01</a></li>
            <li class="page-item active"><a href="#" class="page-link">02</a></li>
            <li class="page-item"><a href="#" class="page-link">03</a></li>
            <li class="page-item"><a href="#" class="page-link">04</a></li>
            <li class="page-item"><a href="#" class="page-link">09</a></li>
            <li class="page-item">
                <a href="#" class="page-link" aria-label="Next">
                    <span aria-hidden="true">
                        <span class="lnr lnr-arrow-right"></span>
                    </span>
                </a>
            </li>
        </ul>
    </nav>
</div>