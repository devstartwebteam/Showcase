@{
    ViewBag.Title = "My Projects";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<main class="profile-page">
    <section class="section-profile-cover section-shaped my-0">
        <!-- Circles background -->
        <div class="shape shape-style-1 shape-primary alpha-4">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
        <!-- SVG separator -->
        <div class="separator separator-bottom separator-skew">
            <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                <polygon class="fill-white" points="2560 0 2560 100 0 100"></polygon>
            </svg>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="card card-profile mt--300">
                <div class="px-4">
                    <div class="row justify-content-center">
                        <div class="col-lg-3 order-lg-2">
                            <div class="card-profile-image">
                                <a href="/Home/About">
                                    <img src="~/Content/images/nate-johnson-profile-2.jpg" class="rounded-circle">
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4 order-lg-3 text-lg-right align-self-lg-center">
                            <div class="card-profile-actions py-4 mt-lg-0">
                                <a href="#" class="btn btn-sm btn-info mr-4">Connect</a>
                                <a href="#" class="btn btn-sm btn-default">Message</a>
                            </div>
                        </div>
                        <div class="col-lg-4 order-lg-1">
                            <div class="card-profile-stats d-flex justify-content-center">
                                <div>
                                    <span class="heading">22</span>
                                    <span class="description">Posts</span>
                                </div>
                                <div>
                                    <span class="heading">10</span>
                                    <span class="description">Photos</span>
                                </div>
                                <div>
                                    <span class="heading">89</span>
                                    <span class="description">Comments</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-5">
                        <h1 class="ds-author-title">
                            @ViewBag.Title
                            <span class="font-weight-light"></span>
                        </h1>
                        <div class="ds-author-home">
                            <p class="ds-author-description">Web Developer | Music Producer | Music is big, running is fun</p>
                        </div>
                    </div>

                    <div class="mt-5 py-5 border-top text-center">
                        <div class="row justify-content-center">
                            <div class="col-lg-10">
                                <p class="ds-post-text">Hi There. My name is Nate and I’m a web developer. I build websites and web applications using primarily ASP.NET MVC/C#. In my spare time, I enjoy exploring the outdoors, listening to music, and learning about computer programming. I currently live in Eugene, Oregon located in the Pacific Northwest. On any given day, you will usually find me behind a computer, out on the running trails or grooving to live music.</p>
                                <a href="/Home/About">Want to Learn More?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>